<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="@dimen/text_size01"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/vampire_black">

        <!--                Title-Developers-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/royal_blue"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text="Developers"
            android:textColor="@color/vampire_black"
            android:textSize="@dimen/title_size"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/royal_blue"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Class Of I.T - 3rd Year [2020-2021]"
            android:textColor="@color/vampire_black"
            android:textSize="@dimen/text_size1"
            android:padding="5dp"/>

        <!--                Developers-Info-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="@dimen/text_margin">

            <!--                    Vrushali-Section-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:paddingLeft="12dp"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vrushali Pachchigar"
                        android:textColor="@color/snow"
                        android:textSize="@dimen/title_size"
                        android:fontFamily="sans-serif-black"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="181240116017"
                        android:textColor="@color/snow"
                        android:textSize="@dimen/text_size"
                        android:fontFamily="sans-serif-light"/>


                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/teacherImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/vrushali"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.5"/>

            </LinearLayout>

            <!--                    Vishwas-Section-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/text_margin">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:paddingLeft="12dp"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vishwas Acharya"
                        android:textColor="@color/snow"
                        android:textSize="@dimen/title_size"
                        android:fontFamily="sans-serif-black"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="181240116001"
                        android:textColor="@color/snow"
                        android:textSize="@dimen/text_size"
                        android:fontFamily="sans-serif-light"/>


                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/vishwas"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.5"/>

            </LinearLayout>

            <!--                    Viren-Section-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/text_margin">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:paddingLeft="12dp"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Viren Vaghasiya"
                        android:textColor="@color/snow"
                        android:textSize="@dimen/title_size"
                        android:fontFamily="sans-serif-black"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="181240116058"
                        android:textColor="@color/snow"
                        android:textSize="@dimen/text_size"
                        android:fontFamily="sans-serif-light"/>


                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/viren"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.5"/>

            </LinearLayout>

            <!--                    Yash-Section-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/text_margin">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:paddingLeft="12dp"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Yash Shah"
                        android:textColor="@color/snow"
                        android:textSize="@dimen/title_size"
                        android:fontFamily="sans-serif-black"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="181240116051"
                        android:textColor="@color/snow"
                        android:textSize="@dimen/text_size"
                        android:fontFamily="sans-serif-light"/>


                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/yash"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.5"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>